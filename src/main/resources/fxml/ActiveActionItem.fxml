<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<fx:root styleClass="action-node-pane" type="StackPane" xmlns="http://javafx.com/javafx/11.0.1"
         xmlns:fx="http://javafx.com/fxml/1">
    <GridPane fx:id="gridPane" hgap="10.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="190.0" prefWidth="190.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="40" minWidth="40.0" prefWidth="40.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints maxHeight="-Infinity" vgrow="SOMETIMES"/>
        </rowConstraints>
        <Label fx:id="activeSchemaLabel" text="Label" wrapText="true" GridPane.rowIndex="1"
               GridPane.valignment="CENTER">
            <tooltip>
                <Tooltip fx:id="nameTooltip"/>
            </tooltip>
        </Label>
        <Label fx:id="validLabel" alignment="TOP_LEFT" contentDisplay="CENTER" styleClass="error" text="Label"
               visible="false" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.valignment="TOP"/>

        <ButtonBar prefHeight="40.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <buttons>
                <JFXButton fx:id="editButton" onAction="#editActiveSchema" styleClass="sub-action-button">
                    <graphic>
                        <FontAwesomeIconView glyphName="EDIT" styleClass="sub-icon"/>
                    </graphic>
                    <tooltip>
                        <Tooltip text="%menu.activeSchemas.edit"/>
                    </tooltip>
                </JFXButton>
                <JFXButton fx:id="closeButton" onAction="#closeActiveSchema" styleClass="sub-action-button">
                    <graphic>
                        <FontAwesomeIconView glyphName="REMOVE" styleClass="sub-icon"/>
                    </graphic>
                    <tooltip>
                        <Tooltip text="%menu.activeSchemas.remove"/>
                    </tooltip>
                </JFXButton>
            </buttons>
        </ButtonBar>
    </GridPane>
</fx:root>
