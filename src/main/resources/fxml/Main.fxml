   <BorderPane>
       <top>
           <JFXToolbar fx:id="title" BorderPane.alignment="CENTER">
               <leftItems>
                   <JFXRippler maskType="CIRCLE" style="-fx-ripple-color:WHITE;">
                       <control>
                           <StackPane fx:id="titleBurgerContainer" />
                       </control>
                   </JFXRippler>
                   <Label text="%application.name" />
               </leftItems>
               <rightItems>
                   <JFXRippler fx:id="optionsRippler" maskType="CIRCLE" style="-fx-ripple-color:WHITE;">
                       <control>
                           <StackPane fx:id="optionsBurger">
                               <children>
                                   <JFXHamburger styleClass="jfx-options-burger" />
                               </children>
                           </StackPane>
                       </control>
                   </JFXRippler>
               </rightItems>
            <center>

            </center>
            <center>
               <GridPane hgap="10.0" maxHeight="-Infinity" maxWidth="-Infinity" BorderPane.alignment="CENTER">
                  <columnConstraints>
                     <ColumnConstraints hgrow="SOMETIMES" />
                     <ColumnConstraints hgrow="SOMETIMES" />
                     <ColumnConstraints hgrow="SOMETIMES" />
                     <ColumnConstraints hgrow="SOMETIMES" />
                  </columnConstraints>
                  <rowConstraints>
                     <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                  </rowConstraints>
                  <children>
                        <JFXButton contentDisplay="GRAPHIC_ONLY" styleClass="animated-option-button" GridPane.columnIndex="3">
