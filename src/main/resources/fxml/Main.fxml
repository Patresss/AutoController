                                <FontAwesomeIconView glyphName="REFRESH" size="24" styleClass="sub-icon" />
                            </graphic>
                        </JFXButton>
                        <JFXButton contentDisplay="GRAPHIC_ONLY" styleClass="animated-option-button" GridPane.columnIndex="1">
